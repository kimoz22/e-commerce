{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/node",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/images/(.*)",
      "dest": "backend/public/images/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "backend/public/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/public/index.html"
    }
  ]
}
